{
  "packages": [
    "openjdk@17",
    "gradle@8.4",
    "kotlin@1.9.20"
  ],
  "shell": {
    "init_hook": [
      "echo 'Welcome to TaskRunna Framework development environment! üèÉ‚Äç‚ôÇÔ∏è'",
      "echo 'Java version:' && java -version",
      "echo 'Gradle version:' && gradle --version | head -n 3",
      "echo 'Kotlin version:' && kotlin -version"
    ],
    "scripts": {
      "build": [
        "echo 'Building TaskRunna Framework...'",
        "gradle build"
      ],
      "test": [
        "echo 'Running tests...'",
        "gradle test"
      ],
      "example": [
        "echo 'Running example...'",
        "gradle :taskrunna-examples:run"
      ],
      "clean": [
        "echo 'Cleaning build artifacts...'",
        "gradle clean"
      ],
      "setup": [
        "echo 'Setting up project...'",
        "gradle wrapper --gradle-version 8.4",
        "echo 'Project setup complete! üéâ'"
      ]
    }
  },
  "env": {
    "JAVA_HOME": "$DEVBOX_PACKAGES_DIR/openjdk@17",
    "GRADLE_OPTS": "-Xmx2g -Dfile.encoding=UTF-8"
  }
} 